<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application>
        <activity
            android:name=".view.main.signup.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.main.dailylist.DailyListActivity"
            android:exported="false" />
        <activity
            android:name=".view.main.writedaily.WriteDailyActivity"
            android:exported="false" />
        <activity
            android:name=".view.main.makediary.MakeDiaryActivity"
            android:exported="false" />
        <activity
            android:name=".view.main.diary.DiaryDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.main.MainActivity"
            android:exported="true" />
    </application>

</manifest>